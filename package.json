{
  "name": "birdwatcher",
  "version": "1.0.0",
  "description": "Chrome extension to tag Twitter users so you can remember why you (dis)like them",
  "author": "Josh Barnett (https://github.com/ohheyjosh)",
  "contributors": [
    "Emily Harber (https://github.com/thecodepixi)"
  ],
  "license": "MIT",
  "main": "src/content.js",
  "scripts": {
    "test": "jest",
    "build": "npx babel src --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ohheyjosh/birdwatcher.git"
  },
  "bugs": {
    "url": "https://github.com/ohheyjosh/birdwatcher/issues"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "eslint-jest",
      "prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "no-restricted-syntax": "off",
      "object-shorthand": "off",
      "class-methods-use-this": "off"
    },
    "settings": {
      "usePrettierrc": true
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "./src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jsdom": "^16.6.0",
    "prettier": "^2.3.2"
  }
}
